# AlphaSeeker 环境变量配置文件
# =============================

# 应用基础配置
ALPHASEEKER_APP_NAME=AlphaSeeker
ALPHASEEKER_APP_VERSION=1.0.0
ALPHASEEKER_DEBUG=false

# 服务器配置
ALPHASEEKER_HOST=0.0.0.0
ALPHASEEKER_PORT=8000
ALPHASEEKER_WORKERS=1

# 性能配置
ALPHASEEKER_MAX_CONCURRENT_TASKS=32
ALPHASEEKER_BATCH_SIZE=100
ALPHASEEKER_REQUEST_TIMEOUT=30.0
ALPHASEEKER_ENABLE_CACHE=true

# 日志配置
ALPHASEEKER_LOG_LEVEL=INFO
ALPHASEEKER_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# 数据路径
ALPHASEEKER_DATA_DIR=data
ALPHASEEKER_MODEL_DIR=models
ALPHASEEKER_LOG_DIR=logs
ALPHASEEKER_CACHE_DIR=cache

# 机器学习引擎配置
ALPHASEEKER_ML_MODEL_PATH=models/lightgbm_model.txt
ALPHASEEKER_ML_TARGET_LATENCY_MS=500
ALPHASEEKER_ML_ENABLE_CACHING=true
ALPHASEEKER_ML_BATCH_SIZE=32

# 风险控制配置
ALPHASEEKER_TAKE_PROFIT_PCT=0.004
ALPHASEEKER_STOP_LOSS_PCT=0.004
ALPHASEEKER_TRANSACTION_COST_PCT=0.0005
ALPHASEEKER_MAX_POSITION_SIZE=1.0
ALPHASEEKER_MAX_DAILY_LOSS=0.02

# 多策略管道配置
ALPHASEEKER_PIPELINE_TIMEOUT_SECONDS=10.0
ALPHASEEKER_ML_PROBABILITY_THRESHOLD=0.65
ALPHASEEKER_ML_CONFIDENCE_THRESHOLD=0.6
ALPHASEEKER_LLM_CONFIDENCE_THRESHOLD=0.65

# 策略权重配置
ALPHASEEKER_STRATEGY_WEIGHT_TECHNICAL=0.4
ALPHASEEKER_STRATEGY_WEIGHT_ML=0.2
ALPHASEEKER_STRATEGY_WEIGHT_RISK=0.2
ALPHASEEKER_STRATEGY_WEIGHT_BACKTEST=0.2

# 市场扫描器配置
ALPHASEEKER_SCANNER_TIMEOUT=15.0
ALPHASEEKER_SCANNER_MIN_VOLUME=1000000
ALPHASEEKER_SCANNER_MIN_MARKET_CAP=10000000
ALPHASEEKER_SCANNER_EXCLUDE_STABLE_COINS=true

# 双重验证器配置
ALPHASEEKER_VALIDATION_LGBM_PROBABILITY_THRESHOLD=0.65
ALPHASEEKER_VALIDATION_LGBM_CONFIDENCE_THRESHOLD=0.6
ALPHASEEKER_VALIDATION_LLM_TIMEOUT=10.0
ALPHASEEKER_VALIDATION_LLM_MAX_RETRIES=3

# LLM配置
ALPHASEEKER_LLM_PROVIDER=ollama
ALPHASEEKER_LLM_BASE_URL=http://localhost:11434
ALPHASEEKER_LLM_MODEL_NAME=llama2:13b
ALPHASEEKER_LLM_TIMEOUT=10.0

# 融合算法配置
ALPHASEEKER_FUSION_STRATEGY=adaptive_weight
ALPHASEEKER_FUSION_LAYER1_WEIGHT=0.3
ALPHASEEKER_FUSION_LAYER2_WEIGHT=0.4
ALPHASEEKER_FUSION_RISK_REWARD_THRESHOLD=1.2

# 缓存配置
ALPHASEEKER_CACHE_INDICATORS_TTL=300
ALPHASEEKER_CACHE_ML_PREDICTIONS_TTL=60
ALPHASEEKER_CACHE_LLM_ASSESSMENTS_TTL=600
ALPHASEEKER_CACHE_BACKTEST_RESULTS_TTL=604800

# 监控配置
ALPHASEEKER_MONITORING_ENABLE_METRICS=true
ALPHASEEKER_MONITORING_METRICS_INTERVAL=60
ALPHASEEKER_MONITORING_CPU_THRESHOLD=80
ALPHASEEKER_MONITORING_MEMORY_THRESHOLD=85
ALPHASEEKER_MONITORING_RESPONSE_TIME_THRESHOLD=5.0

# 安全配置
ALPHASEEKER_RATE_LIMITING_ENABLED=true
ALPHASEEKER_RATE_LIMITING_REQUESTS_PER_MINUTE=100
ALPHASEEKER_RATE_LIMITING_BURST_SIZE=20

# CORS配置
ALPHASEEKER_CORS_ALLOWED_ORIGINS=*
ALPHASEEKER_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
ALPHASEEKER_CORS_ALLOWED_HEADERS=*

# 内存管理配置
ALPHASEEKER_MEMORY_MAX_CACHE_SIZE=1000
ALPHASEEKER_MEMORY_CLEANUP_INTERVAL=300

# 第三方服务配置
# CCXT配置（用于获取市场数据）
ALPHASEEKER_CCXT_TIMEOUT=10
ALPHASEEKER_CCXT_RETRIES=3

# 数据库配置（如果需要）
# ALPHASEEKER_DATABASE_URL=sqlite:///./data/alphaseeker.db
# ALPHASEEKER_DATABASE_POOL_SIZE=10

